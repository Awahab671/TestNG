<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Syntax HRM">
    <test verbose="2" preserve-order="true" name="Smoke Test">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="com.syntax.class02.SoftAssertion2"/>
        </classes>
    </test>
    <test verbose="2" preserve-order="true" name="Regression Test">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
    </test>
</suite>